.page-header: h1 Subscriber Response

dl#subscriber-response.dl-horizontal
  dt: strong Subscriber Response:
  dd= print_or_dashes @subscriber_activity.caption

  - if @subscriber_activity.message
    dt: strong Original Message:
    dd= link_to print_or_dashes(@subscriber_activity.message.caption),
                channel_message_path( \
                  @subscriber_activity.message.channel,
                  @subscriber_activity.message,
                )

  - if @subscriber_activity.channel
    dt: strong Channel:
    dd= link_to print_or_dashes(@subscriber_activity.channel.name),
                channel_path(@subscriber_activity.channel)

  - if @subscriber_activity.channel_group
    dt: strong Channel group:
    dd= link_to print_or_dashes(@subscriber_activity.channel_group.name),
                channel_group_path(@subscriber_activity.channel_group)

  - if @subscriber_activity.subscriber
    dt: strong Subscriber:
    dd= link_to print_or_dashes(@subscriber_activity.subscriber.name),
                subscriber_path(@subscriber_activity.subscriber)

  dt: strong Received:
  dd= print_or_dashes @subscriber_activity.created_at
  dt: strong Processed:
  dd= @subscriber_activity.processed

.form-actions
  => link_to "Back", request.referer, class: "btn"
  => link_to "Edit", sa_path(@subscriber_activity).merge(action: :edit), class: "btn"