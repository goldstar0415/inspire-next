<%- model_class = ResponseAction -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Response Text</th>
      <th>Action Type</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @response_actions.each do |response_action| %>
      <tr>
        <td><%= link_to response_action.response_text,channel_message_response_action_path(@channel,@message,response_action) %></td>
        <td><%=response_action.action.type.underscore.humanize%></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_channel_message_response_action_path(@channel,@message,response_action), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      channel_message_response_action_path(@channel,@message,response_action),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to t('.new', :default => t("helpers.links.new")),
              new_channel_message_response_action_path(@channel,@message),
              :class => 'btn btn-primary' %>
  <%= link_to 'Back', request.referrer, :class=>'btn' %>
  <%= link_to 'Export response actions',channel_message_response_actions_path(@channel,@message,format:'csv') ,:class=>'btn'%>
  <%= link_to 'Import response actions',select_import_channel_message_response_actions_path(@channel,@message) ,:class=>'btn'%>
</div>



