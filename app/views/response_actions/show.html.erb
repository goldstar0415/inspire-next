<%- model_class = ResponseAction -%>
<div class="page-header">
  <h1>Response Action</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Response Text:</strong></dt>
  <dd><%= print_or_dashes(@response_action.response_text) %></dd>
  <%= render 'actions/show_fields'%>
</dl>
<div class="form-actions">
  <%= link_to 'Back',channel_message_path(@channel,@message), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_channel_message_response_action_path(@channel,@message,@response_action), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              channel_message_response_action_path(@channel,@message,@response_action),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
